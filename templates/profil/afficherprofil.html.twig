{% extends 'base.html.twig' %}
{% block title %}Profil de {{ profil.pseudo }}{% endblock title %}
{% block title_2 %}Profil de {{ profil.pseudo }}{% endblock title_2 %}
{% block taille %}w-50{% endblock taille %}
{% block taille2 %}w-50{% endblock taille2 %}
{% block body %}

<div class="d-flex justify-content-center">
    <div class="row w-75 mt-3">
        <label class="col-md-5">Prenom : </label><p class="col-md-7">{{ profil.prenom }}</p>
        <label class="col-md-5">Nom : </label><p class="col-md-7">{{ profil.nom }}</p>
        <label class="col-md-5">Téléphone : </label><p class="col-md-7">{{ profil.telephone}}</p>
        <label class="col-md-5">Email : </label><p class="col-md-7">{{ profil.email }}</p>
        <label class="col-md-5">Campus : </label><p class="col-md-7">{{ profil.campusUser.nomCampus }}</p>
        <div class="my-3 d-flex justify-content-center">
            <button class="btn btn-primary"><a class="customize" href=javascript:history.go(-1)>Retour</a></button>
        </div>
    </div>
</div>

{% endblock %}
