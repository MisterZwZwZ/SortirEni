{% extends 'base.html.twig' %}
{% block title %}Afficher une sortie{% endblock %}
{% block title_2 %}Afficher une sortie{% endblock title_2 %}
{% block taille %}w-75{% endblock taille %}
{% block taille2 %}w-75{% endblock taille2 %}

{% block body %}
                <div class="row">
                    <div class="row col-md-6">
                        <label class="col-md-5 my-2">Nom de la sortie :</label><p class="col-md-7 my-2">{{ sortie.nom }}</p>
                        <label class="col-md-5 my-2">Date et heure de la sortie :</label><p class="col-md-7 my-2">{{ sortie.dateHeureDebut | date('m/d/y') }}</p>
                        <label class="col-md-5 my-2">Date limite d'inscription :</label><p class="col-md-7 my-2">{{ sortie.dateLimiteInscription |date('m/d/y')  }}</p>
                        <label class="col-md-5 my-2">Nombre de place :</label><p class="col-md-7 my-2">{{ sortie.nbIncriptionsMax }}</p>
                        <label class="col-md-5 my-2">Dur√©e :</label><p class="col-md-7 my-2">{{ sortie.duree }} minutes</p>
                        <label class="col-md-5 my-2">Description et infos :</label><p class="col-md-7 my-2">{{ sortie.infosSortie}}</p>
                    </div>
                    <div class="row col-md-6">
                        <label class="col-md-5 my-2">Campus :</label><p class="col-md-7 my-2">{{ campus.nomCampus }}</p>
                        <label class="col-md-5 my-2">Lieu :</label><p class="col-md-7 my-2">{{ lieu.nom }}</p>
                        <label class="col-md-5 my-2">Rue :</label><p class="col-md-7 my-2">{{ lieu.rue }}</p>
                        <label class="col-md-5 my-2">Code postal :</label><p class="col-md-7 my-2">{{ ville.codePostal }}</p>
                        <label class="col-md-5 my-2">Latitude :</label><p class="col-md-7 my-2">{{ lieu.latitude }}</p>
                        <label class="col-md-5 my-2">Longitude :</label><p class="col-md-7 my-2">{{ lieu.longitude }}</p>
                    </div>
                    <div class="row mt-5 mb-3">
                        <div class="col-9">
                            <table class="table">
                                <thead>
                                    <tr class="table-dark">
                                        <th>Pseudo</th>
                                        <th>Nom</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% set listeInscrits = sortie.listedesinscrits %}
                                {% for inscrit in listeInscrits %}
                                {% if  user.getId == inscrit.getId %}
                                    <tr class="table-success">
                                        <th scope="row">{{ inscrit.pseudo }}</th>
                                        <td>{{ inscrit.nom}}</td>
                                {% else %}
                                    <tr class="table-default">
                                        <td>{{ inscrit.pseudo }}</td>
                                        <td>{{ inscrit.nom}}</td>
                                {% endif %}
                                    </tr>
                                </tbody>
                                {% endfor %}
                            </table>
                        </div>
                        <div class="col-3 d-flex justify-content-center">
                            <div>
                                <button name="btn-submit" type="submit" class="btn btn-primary" value="annuler">Annuler</button>
                            </div>
                        </div>
                    </div>
                </div>
{% endblock %}