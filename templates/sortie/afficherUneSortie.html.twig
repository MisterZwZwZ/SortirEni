{% extends 'base.html.twig' %}
    {% block title %}Afficher une sortie{% endblock %}
    {% block body %}
        <div class="p-3">
            <div class="card border-primary mb-3">
                <div class="card-header">Afficher une sortie</div>
                    <div class="row card-body">
                        <div class="row col-md-6">
                            <label class="col-md-5">Nom de la sortie :</label><p class="col-md-7">{{ sortie.nom }}</p>
                            <label class="col-md-5">Date et heure de la sortie :</label><p class="col-md-7">{{ sortie.dateHeureDebut | format_datetime() }}</p>
                            <label class="col-md-5">Date limite d'inscription :</label><p class="col-md-7">{{ sortie.dateLimiteInscription | format_date() }}</p>
                            <label class="col-md-5">Nombre de place :</label><p class="col-md-7">{{ sortie.nbIncriptionsMax }}</p>
                            <label class="col-md-5">Dur√©e :</label><p class="col-md-7">{{ sortie.duree }} minutes</p>
                            <label class="col-md-5">Description et infos :</label><p class="col-md-7">{{ sortie.infosSortie}}</p>
                        </div>
                        <div class="row col-md-6">
                            <label class="col-md-5">Campus :</label><p class="col-md-7">{{ campus.nomCampus }}</p>
                            <label class="col-md-5">Lieu :</label><p class="col-md-7">{{ lieu.nom }}</p>
                            <label class="col-md-5">Rue :</label><p class="col-md-7">{{ lieu.rue }}</p>
                            <label class="col-md-5">Code postal :</label><p class="col-md-7">{{ ville.codePostal }}</p>
                            <label class="col-md-5">Latitude :</label><p class="col-md-7">{{ lieu.latitude }}</p>
                            <label class="col-md-5">Longitude :</label><p class="col-md-7">{{ lieu.longitude }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}